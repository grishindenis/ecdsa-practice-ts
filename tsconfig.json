{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {},
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": false,
    "incremental": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
